<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="268dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_gravity="bottom|clip_horizontal|top"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="25dp"
                    android:isScrollContainer="true"
                    android:text="Легедны японского автопрома"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="158dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="221dp"
                    android:layout_height="144dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginBottom="441dp"
                    android:isScrollContainer="true"
                    app:srcCompat="@drawable/r32" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="184dp"
                    android:layout_height="109dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="29dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="544dp"
                    android:isScrollContainer="true"
                    android:text="Восьмое поколение Skyline, с индексом R32, появилось в мае 1989 г. Всего было выпущено 313 491 автомобилей."
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <Space
                    android:layout_width="305dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="259dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="201dp"
                    android:layout_height="104dp"
                    android:layout_marginTop="68dp"
                    android:isScrollContainer="true"
                    app:srcCompat="@drawable/rx7_fc" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="177dp"
                    android:layout_height="171dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="323dp"
                    android:isScrollContainer="true"
                    android:text="Mazda RX-7 — спортивный автомобиль, выпускавшийся японским автопроизводителем Mazda с 1978 по 2002 год. Оригинальная RX-7 оснащалась двухсекционным роторно-поршневым двигателем."
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="241dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="244dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="193dp"
                        android:layout_height="209dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="212dp"
                        android:isScrollContainer="true"
                        app:srcCompat="@drawable/evo3" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="172dp"
                        android:layout_marginTop="44dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="144dp"
                        android:isScrollContainer="true"
                        android:text="Mitsubishi Lancer Evolution — это спортивный вариант знаменитого автомобиля. Она отличается от стандартных Lancer оригинальным спойлером, капотом, бампером."
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="328dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="176dp"
                    android:layout_height="111dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="66dp"
                    android:layout_marginEnd="37dp"
                    android:layout_marginBottom="160dp"
                    app:srcCompat="@drawable/s13" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="124dp"
                    android:layout_height="252dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="114dp"
                    android:text="Nissan Silvia — спортивное купе, выпускавшееся японским автопроизводителем Nissan с 1965 по 2002 годы. Купе строилось на платформе Nissan S. Хотя и последние модели разделяли это шасси с другими автомобилями Nissan, название Silvia на эти автомобили совместно с кодами шасси не переходило."
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </FrameLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:isScrollContainer="true"
                android:text="Для того, чтобы узнать больше информации нажмите кнопу снизу"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:isScrollContainer="true"
                android:onClick="goRead"
                android:text="Узнать" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>